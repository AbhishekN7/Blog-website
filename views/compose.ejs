<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Daily Journal</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

</head>

<body>


    <%- include('./partials/header'); %>

        <h1>Compose</h1>
        <form action="/compose" method="post">

            <div class="form-group">
                <label for="InputText">Title</label>
                <input type="text" class="form-control" name="postTitle" id="InputText">
            </div>
            <div class="form-group">
                <label for="InputTextarea">Body</label>
                <textarea class="form-control" id="InputTextarea" name="postBody" rows="10"></textarea>

            </div>

            <button class="btn btn-info" type="submit">Publish</button>
        </form>

        <%- include('./partials/footer'); %>

</body>